Proceso circulo
	// ejercicio
	// Escriba un programa que reciba como entrada el 
	// radio de un círculo y entregue como salida su perímetro y su área:
	Definir radio Como Real;
	Definir p Como Real;
	Definir perimetro Como Real;
	Definir area Como Real;
	p <- 3.14;
	Escribir 'ingrese el radio de del circulo';
	Leer radio;
	perimetro <- 2*p*radio;
	area <- p*radio*radio;
	Escribir 'perimetro',perimetro;
	Escribir 'area',area;
FinProceso
